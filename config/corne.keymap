#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>


#define HRA &mt LGUI A
#define HRS &mt LALT S
#define HRD &mt LCTRL D
#define HRF &mt LSHIFT F
#define HRJ &mt RSHIFT J
#define HRK &mt RCTRL K
#define HRL &mt LALT L
#define HRSC &mt RGUI SEMI

#define LMO &kp ESC
#define LNU &lt 1 SPACE
#define LMV &kp TAB
#define LSY &kp RET
#define LAC &kp BSPC
#define LFN &kp DEL

/ {
    behaviors {
        mt: mod_tap {
            compatible = "zmk,behavior-hold-tap";
            flavor = "balanced";
            display-name = "Mod-Tap";
        };
    };
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
   &none &kp Q      &kp W       &kp E       &kp R       &kp T       &kp Y       &kp U       &kp I       &kp O       &kp P       &none
   &none HRA        HRS         HRD         HRF         &kp G       &kp H       HRJ         HRK         HRL         HRSC        &none
   &none &kp Z      &kp X       &kp C       &kp V       &kp B       &kp N       &kp M       &kp COMMA   &kp DOT     &kp FSLH    &none
                                LMO         LNU         LMV         LSY         LAC         LFN
            >;
        };
        number_layer {
            bindings = <
   &trans &trans    &trans     &trans       &trans      &trans      &kp PLUS    &kp N7      &kp N8      &kp N9      &kp STAR    &trans
   &trans &trans    &trans     &trans       &trans      &trans      &kp MINUS   &kp N4      &kp N5      &kp N6      &kp EQUAL   &trans
   &trans &trans    &trans     &trans       &trans      &trans      &kp UNDER   &kp N1      &kp N2      &kp N3      &kp SLASH   &trans
                               &trans       &trans      &trans      &kp COMMA   &kp N0      &kp DOT
            >;
        };
        cp_layer {
            bindings = <
   &trans &trans    &trans     &trans       &trans      &trans      &trans      &trans      &trans      &trans      &trans      &trans
   &trans &trans    &trans     &trans       &trans      &trans      &trans      &trans      &trans      &trans      &trans      &trans
   &trans &trans    &trans     &trans       &trans      &trans      &trans      &trans      &trans      &trans      &trans      &trans
                               &trans       &trans      &trans      &trans      &trans      &trans
            >;
        };
        
